# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.{json,jsonc,plist}]
max_line_length = off

[*.{js,cjs,mjs,jsx,ts,tsx,mdx,html}]
indent_size = 2

[{justfile,*.{just,toml,txt,yml,yaml}}]
indent_size = 2

[*.txt]
insert_final_newline = false
trim_trailing_whitespace = false
max_line_length = off

[{Makefile,**.mk}]
indent_style = tab
