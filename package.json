{
  "name": "next-tailwind-starter",
  "version": "12.14.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port ${PORT:=3000}",
    "build": "NEXT_TELEMETRY_DISABLED=1 next build",
    "start": "next start --port ${PORT:=3000}",
    "export": "next export",
    "lint": "next lint",
    "format": "prettier --write .",
    "build:docker": "docker build -t $npm_package_name:latest -t $npm_package_name:v$npm_package_version .",
    "run:docker": "docker run -p 3000:3000 $npm_package_name:latest"
  },
  "dependencies": {
    "@fontsource/be-vietnam-pro": "^4.5.2",
    "@fontsource/jetbrains-mono": "^4.5.3",
    "@headlessui/react": "^1.5.0",
    "@heroicons/react": "^1.0.5",
    "@splitbee/web": "^0.3.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@tailwindcss/typography": "^0.5.2",
    "akar-icons": "^1.9.8",
    "framer-motion": "^6.2.6",
    "next": "12.1.0",
    "next-themes": "^0.0.15",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@types/node": "^17.0.18",
    "@types/react": "^17.0.39",
    "@types/tailwindcss": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "autoprefixer": "^10.4.2",
    "clsx": "^1.1.1",
    "eslint": "~8.9.0",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "postcss": "^8.4.6",
    "prettier": "^2.5.1",
    "sharp": "^0.30.1",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort"
    ],
    "extends": [
      "eslint:recommended",
      "next",
      "next/core-web-vitals",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-console": "warn",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@next/next/no-img-element": "off",
      "simple-import-sort/exports": "warn",
      "simple-import-sort/imports": [
        "warn",
        {
          "groups": [
            [
              "^@?\\w",
              "^\\u0000"
            ],
            [
              "^.+\\.s?css$"
            ],
            [
              "^@/libraries",
              "^@/hooks"
            ],
            [
              "^@/components",
              "^@/styles"
            ],
            [
              "^@/"
            ],
            [
              "^\\./?$",
              "^\\.(?!/?$)",
              "^\\.\\./?$",
              "^\\.\\.(?!/?$)",
              "^\\.\\./\\.\\./?$",
              "^\\.\\./\\.\\.(?!/?$)",
              "^\\.\\./\\.\\./\\.\\./?$",
              "^\\.\\./\\.\\./\\.\\.(?!/?$)"
            ],
            [
              "^@/types"
            ],
            [
              "^"
            ]
          ]
        }
      ]
    },
    "globals": {
      "React": true,
      "JSX": true
    }
  },
  "eslintIgnore": [
    ".next", ".cache", "build", "dist", "out"
  ],
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxSingleQuote": true,
    "printWidth": 110,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  }
}
