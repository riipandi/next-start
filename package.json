{
  "name": "next-tailwind-starter",
  "version": "12.15.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port ${PORT:=3000}",
    "build": "NEXT_TELEMETRY_DISABLED=1 next build",
    "start": "next start --port ${PORT:=3000}",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "TIMING=1 next lint --fix",
    "lint": "TIMING=1 next lint",
    "export": "next export"
  },
  "dependencies": {
    "@fontsource/epilogue": "^4.5.9",
    "@fontsource/jetbrains-mono": "^4.5.10",
    "@headlessui/react": "^1.7.2",
    "@heroicons/react": "^2.0.11",
    "date-fns": "^2.29.3",
    "framer-motion": "^7.3.5",
    "next": "12.3.0",
    "next-plausible": "^3.6.2",
    "next-themes": "^0.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.7",
    "@types/node": "^18.7.18",
    "@types/react-dom": "18.0.6",
    "@types/react": "^18.0.20",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "autoprefixer": "^10.4.11",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "eslint-config-next": "12.3.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-tailwindcss": "^3.6.2",
    "eslint": "~8.23.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,css,scss,md,ts,tsx,html,graphql}": [
      "npm run format --uncommitted"
    ]
  },
  "prettier": {
    "jsxSingleQuote": true,
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "useTabs": false
  }
}
