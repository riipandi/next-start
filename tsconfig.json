{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es5",
        "paths": {
            "@/components/*": ["components/*"],
            "@/config/*": ["config/*"],
            "@/content/*": ["content/*"],
            "@/hooks/*": ["hooks/*"],
            "@/stores/*": ["stores/*"],
            "@/styles/*": ["styles/*"],
            "@/utils/*": ["utils/*"],
            "~/*": ["../public/*"]
        }
    },
    "include": ["src", "next-env.d.ts"],
    "exclude": ["node_modules"]
}
